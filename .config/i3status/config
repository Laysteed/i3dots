# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
	color_good = "#a7c080"
    	color_degraded = "#dbbc7f"
    	color_bad = "#e67e80"
}

#order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "Wi-Fi:%quality, %essid, %frequency"
        format_down = "Wi-Fi: down"
}

ethernet _first_ {
        format_up = "ETH: %speed"
        format_down = "ETH: down"
}

battery 0 {
        format = "%status: %percentage, about %remaining"
	last_full_capacity = true
}

disk "/" {
        format = "NVME: %avail"
}

cpu_usage {
    format = "CPU: %usage"
}


memory {
        format = "MEM: %used of %total"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
    format = "%d %b %H:%M:%S"
}
